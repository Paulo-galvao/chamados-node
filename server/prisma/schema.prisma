generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Request {
  id          Int @id @default(autoincrement())
  title       String
  description String
  created_at  DateTime  @default(now())
  limit       DateTime  @default(dbgenerated("(NOW() + '3 days'::interval)"))
  resolved    DateTime? 
  category_id Int
  category    Category @relation(fields: [category_id], references: [id])
  status_id   Int 
  status      Status @relation(fields: [status_id], references: [id])
}

model Category {
  id       Int @id @default(autoincrement())
  name     String
  requests Request[]
}

model Status {
  id       Int @id @default(autoincrement())
  name     String
  requests Request[]
}